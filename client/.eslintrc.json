{
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks",
        "jest"
    ],
    "root": true,
    "rules": {
        "semi": [1, "always"],
        "quotes": [1, "single", { "allowTemplateLiterals": true }],
        "no-trailing-spaces": [1, { "skipBlankLines": true, "ignoreComments": true }],

        "react/prop-types": 0,
        "react-hooks/rules-of-hooks": 2,
        "react-hooks/exhaustive-deps": 1

    },
    "overrides": [
        {
            "files": [ "./src/__tests__/*" ],
            "env": { "jest": true }
        }
    ]
}